@page
@model VetClinic.Web.Pages.Staff.AgendaModel
@{
    ViewData["Title"] = "Daily Agenda";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-calendar-day text-primary"></i> Daily Agenda - @DateTime.Today.ToString("MMMM dd, yyyy")</h2>
                <div>
                    <a asp-page="/Appointments/Index" class="btn btn-outline-primary">
                        <i class="fas fa-calendar-alt"></i> View All Appointments
                    </a>
                    <button type="button" class="btn btn-success" onclick="location.reload()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item">Staff</li>
                    <li class="breadcrumb-item active">Daily Agenda</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.TotalAppointments</h4>
                    <p class="mb-0">Total Today</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.CompletedAppointments</h4>
                    <p class="mb-0">Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@Model.InProgressAppointments</h4>
                    <p class="mb-0">In Progress</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.UpcomingAppointments</h4>
                    <p class="mb-0">Upcoming</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h4>@Model.CancelledAppointments</h4>
                    <p class="mb-0">Cancelled</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h4>@Model.UniqueDoctors</h4>
                    <p class="mb-0">Doctors</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Time Slots Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-clock"></i> Time Slots Overview</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @for (int hour = 8; hour <= 17; hour++)
                        {
                            var timeSlot = $"{hour:00}:00";
                            var appointmentsInSlot = Model.TodayAppointments.Count(a => a.AppointmentTime.Hour == hour);
                            var slotClass = appointmentsInSlot switch
                            {
                                0 => "bg-light text-muted",
                                1 => "bg-success text-white",
                                2 => "bg-warning text-dark",
                                >= 3 => "bg-danger text-white",
                                _ => "bg-light"
                            };

                            <div class="col-md-1 mb-2">
                                <div class="text-center p-2 rounded @slotClass">
                                    <div class="fw-bold">@timeSlot</div>
                                    <small>@appointmentsInSlot apt(s)</small>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <span class="badge bg-light text-muted">Empty</span>
                            <span class="badge bg-success">1 appointment</span>
                            <span class="badge bg-warning text-dark">2 appointments</span>
                            <span class="badge bg-danger">3+ appointments</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="row">
        <div class="col-12">
            @if (Model.TodayAppointments.Any())
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="fas fa-list"></i> Today's Appointments Schedule</h6>
                        <span class="badge bg-primary">@Model.TodayAppointments.Count() appointments</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-clock"></i> Time</th>
                                        <th><i class="fas fa-paw"></i> Pet</th>
                                        <th><i class="fas fa-user"></i> Owner</th>
                                        <th><i class="fas fa-user-md"></i> Doctor</th>
                                        <th><i class="fas fa-briefcase-medical"></i> Service</th>
                                        <th><i class="fas fa-info-circle"></i> Status</th>
                                        <th><i class="fas fa-map-marker-alt"></i> Room</th>
                                        <th><i class="fas fa-cogs"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.TodayAppointments)
                                    {
                                        <tr class="@GetRowClass(appointment)">
                                            <!-- Time -->
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold">@appointment.AppointmentTime.ToString("HH:mm")</span>
                                                    <small class="text-muted">
                                                        @appointment.Service?.DurationMinutes min
                                                    </small>
                                                </div>
                                            </td>

                                            <!-- Pet -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-paw text-primary me-2"></i>
                                                    <div>
                                                        <span class="fw-bold">@appointment.Pet?.Name</span>
                                                        <br />
                                                        <small class="text-muted">@appointment.Pet?.Species</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Owner -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user text-info me-2"></i>
                                                    <div>
                                                        <span class="fw-bold">@appointment.Pet?.Owner?.FullName</span>
                                                        <br />
                                                        <small class="text-muted">@appointment.Pet?.Owner?.PhoneNumber</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Doctor -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-md text-success me-2"></i>
                                                    <div>
                                                        <span class="fw-bold">Dr. @appointment.Doctor?.FullName</span>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Service -->
                                            <td>
                                                <div>
                                                    <span class="fw-bold">@appointment.Service?.Name</span>
                                                    <br />
                                                    <small class="text-muted">$@appointment.Service?.Price</small>
                                                </div>
                                            </td>

                                            <!-- Status -->
                                            <td>
                                                @{
                                                    var statusClass = appointment.Status switch
                                                    {
                                                        "Scheduled" => "bg-primary",
                                                        "Confirmed" => "bg-info",
                                                        "InProgress" => "bg-warning text-dark",
                                                        "Completed" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@appointment.Status</span>
                                            </td>

                                            <!-- Room Assignment -->
                                            <td>
                                                <select class="form-select form-select-sm" onchange="assignRoom(@appointment.Id, this.value)">
                                                    <option value="">Assign Room</option>
                                                    <option value="Room 1">Room 1</option>
                                                    <option value="Room 2">Room 2</option>
                                                    <option value="Room 3">Room 3</option>
                                                    <option value="Surgery">Surgery</option>
                                                    <option value="X-Ray">X-Ray</option>
                                                    <option value="Grooming">Grooming</option>
                                                </select>
                                            </td>

                                            <!-- Actions -->
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="/Appointments/Details" asp-route-id="@appointment.Id" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    @if (appointment.Status == "Scheduled")
                                                    {
                                                        <button type="button" class="btn btn-outline-success" 
                                                                onclick="updateStatus(@appointment.Id, 'Confirmed')" title="Confirm">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    
                                                    @if (appointment.Status == "Confirmed")
                                                    {
                                                        <button type="button" class="btn btn-outline-warning" 
                                                                onclick="updateStatus(@appointment.Id, 'InProgress')" title="Start">
                                                            <i class="fas fa-play"></i>
                                                        </button>
                                                    }
                                                    
                                                    @if (appointment.Status == "InProgress")
                                                    {
                                                        <button type="button" class="btn btn-outline-info" 
                                                                onclick="updateStatus(@appointment.Id, 'Completed')" title="Complete">
                                                            <i class="fas fa-check-circle"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No appointments scheduled for today</h5>
                        <p class="text-muted">The schedule is clear. Time to prepare for tomorrow!</p>
                        <a asp-page="/Appointments/Index" class="btn btn-primary">
                            <i class="fas fa-calendar-alt"></i> View All Appointments
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Hidden form for status updates -->
<form id="statusUpdateForm" method="post" asp-page-handler="UpdateStatus" style="display: none;">
    <input name="appointmentId" id="statusAppointmentId" type="hidden" />
    <input name="newStatus" id="statusNewStatus" type="hidden" />
</form>

@section Scripts {
    <script>
        function updateStatus(appointmentId, newStatus) {
            if (confirm(`Are you sure you want to mark this appointment as ${newStatus.toLowerCase()}?`)) {
                document.getElementById('statusAppointmentId').value = appointmentId;
                document.getElementById('statusNewStatus').value = newStatus;
                document.getElementById('statusUpdateForm').submit();
            }
        }

        function assignRoom(appointmentId, roomName) {
            if (roomName && confirm(`Assign appointment to ${roomName}?`)) {
                // Here you could implement room assignment logic
                // For now, just show a success message
                alert(`Appointment assigned to ${roomName} successfully!`);
            }
        }

        // Auto-refresh every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);

        // Show current time
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString();
            document.title = `Daily Agenda - ${timeString}`;
        }

        updateCurrentTime();
        setInterval(updateCurrentTime, 1000);
    </script>
}

@functions {
    private string GetRowClass(VetClinic.Repository.Entities.Appointment appointment)
    {
        var now = DateTime.Now;
        var appointmentTime = appointment.AppointmentTime;
        
        if (appointment.Status == "Completed")
            return "table-success";
        else if (appointment.Status == "Cancelled")
            return "table-danger";
        else if (appointment.Status == "InProgress")
            return "table-warning";
        else if (appointmentTime <= now && appointmentTime.AddMinutes(appointment.Service?.DurationMinutes ?? 30) >= now)
            return "table-info"; // Current appointment
        else if (appointmentTime < now && appointment.Status != "Completed")
            return "table-secondary"; // Overdue
        else
            return "";
    }
}
