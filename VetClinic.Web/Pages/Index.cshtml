@page
@model IndexModel
@{
    ViewData["Title"] = "VetClinic Management System";
}

<div class="text-center">
    <h1 class="display-4">VetClinic Management System</h1>
    <p class="lead">Comprehensive Pet Care Management Solution</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Register and manage user accounts</p>
                    <a href="/Account/Register" class="btn btn-primary">Register</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-sign-in-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Login</h5>
                    <p class="card-text">Access your account</p>
                    <a href="/Account/Login" class="btn btn-success">Login</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Users List</h5>
                    <p class="card-text">View all registered users</p>
                    <a href="/Users" class="btn btn-info">View Users</a>
                </div>
            </div>
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-info mt-4" role="alert">
            @ViewData["Message"]
        </div>
    }

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-4" role="alert">
            @ViewData["Error"]
        </div>
    }
</div>
