@using VetClinic.Web.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinic.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VetClinic.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-heart text-danger me-2"></i>VetClinic
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SessionHelper.IsAuthenticated(ViewContext.HttpContext.Session))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>
                        }
                        @if (SessionHelper.IsAuthenticated(ViewContext.HttpContext.Session))
                        {
                            var userRole = SessionHelper.GetUserRole(ViewContext.HttpContext.Session);
                            @if (userRole == "Customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Pets/Index">
                                        <i class="fas fa-paw me-1"></i>My Pets
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Appointments/Book">
                                        <i class="fas fa-calendar-plus me-1"></i>Book Appointment
                                    </a>
                                </li>
                            }
                            @if (userRole == "Doctor" || userRole == "Admin" || userRole == "Manager" || userRole == "Staff")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Pets/Index">
                                        <i class="fas fa-paw me-1"></i>All Pets
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Appointments/Index">
                                    <i class="fas fa-calendar-alt me-1"></i>Appointments
                                </a>
                            </li>
                            @if (userRole == "Staff" || userRole == "Admin" || userRole == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Staff/Agenda">
                                        <i class="fas fa-calendar-day me-1"></i>Daily Agenda
                                    </a>
                                </li>
                            }
                            @if (userRole == "Doctor" || userRole == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/MedicalRecords/Index">
                                        <i class="fas fa-file-medical me-1"></i>Medical Records
                                    </a>
                                </li>
                            }
                            @if (userRole == "Doctor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Doctors/BlockSlots">
                                        <i class="fas fa-calendar-times me-1"></i>Block Time Slots
                                    </a>
                                </li>
                            }
                            @if (userRole == "Admin" || userRole == "Manager")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cogs me-1"></i>Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Users/Index"><i class="fas fa-users me-1"></i>Users</a></li>
                                        <li><a class="dropdown-item" asp-page="/Services/Index"><i class="fas fa-concierge-bell me-1"></i>Services</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Reports/Index"><i class="fas fa-chart-bar me-1"></i>Reports</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (SessionHelper.IsAuthenticated(ViewContext.HttpContext.Session))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>@SessionHelper.GetUserName(ViewContext.HttpContext.Session)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="/Profile/Index"><i class="fas fa-user me-1"></i>My Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Account/Logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>