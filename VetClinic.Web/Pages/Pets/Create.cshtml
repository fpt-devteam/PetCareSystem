@page
@model VetClinic.Web.Pages.Pets.CreateModel
@{
    ViewData["Title"] = "Add New Pet";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-plus-circle text-primary"></i> Add New Pet</h2>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Pets
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-paw"></i> Pet Information</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger" role="alert"></div>
                        
                        <!-- Owner Selection (for Admin/Staff only) -->
                        @if (ViewSessionHelper.IsInAnyRole(ViewContext.HttpContext.Session, "Admin", "Manager") || ViewSessionHelper.IsInRole(ViewContext.HttpContext.Session, "Staff"))
                        {
                            <div class="mb-3">
                                <label asp-for="Pet.OwnerId" class="form-label required">Pet Owner</label>
                                <select asp-for="Pet.OwnerId" asp-items="Model.OwnerSelectList" class="form-select" required>
                                    <option value="">Select an owner...</option>
                                </select>
                                <span asp-validation-for="Pet.OwnerId" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="Pet.OwnerId" value="@Model.CurrentUserId" />
                        }

                        <div class="row">
                            <!-- Pet Name -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Name" class="form-label required">Pet Name</label>
                                <input asp-for="Pet.Name" class="form-control" placeholder="Enter pet's name" required />
                                <span asp-validation-for="Pet.Name" class="text-danger"></span>
                            </div>

                            <!-- Species -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Species" class="form-label required">Species</label>
                                <select asp-for="Pet.Species" class="form-select" required>
                                    <option value="">Select species...</option>
                                    <option value="Dog">Dog</option>
                                    <option value="Cat">Cat</option>
                                    <option value="Bird">Bird</option>
                                    <option value="Rabbit">Rabbit</option>
                                    <option value="Hamster">Hamster</option>
                                    <option value="Guinea Pig">Guinea Pig</option>
                                    <option value="Reptile">Reptile</option>
                                    <option value="Fish">Fish</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Pet.Species" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Breed -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Breed" class="form-label">Breed</label>
                                <input asp-for="Pet.Breed" class="form-control" placeholder="Enter breed (optional)" />
                                <span asp-validation-for="Pet.Breed" class="text-danger"></span>
                            </div>

                            <!-- Gender -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Gender" class="form-label">Gender</label>
                                <select asp-for="Pet.Gender" class="form-select">
                                    <option value="">Select gender...</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Unknown">Unknown</option>
                                </select>
                                <span asp-validation-for="Pet.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Birth Date -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.BirthDate" class="form-label">Birth Date</label>
                                <input asp-for="Pet.BirthDate" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Pet.BirthDate" class="text-danger"></span>
                                <small class="form-text text-muted">Leave blank if unknown</small>
                            </div>

                            <!-- Weight -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pet.Weight" class="form-label">Weight (kg)</label>
                                <input asp-for="Pet.Weight" type="number" step="0.1" min="0" class="form-control" placeholder="0.0" />
                                <span asp-validation-for="Pet.Weight" class="text-danger"></span>
                                <small class="form-text text-muted">Current weight in kilograms</small>
                            </div>
                        </div>

                        <!-- Color -->
                        <div class="mb-3">
                            <label asp-for="Pet.Color" class="form-label">Color/Markings</label>
                            <input asp-for="Pet.Color" class="form-control" placeholder="Describe pet's color or markings" />
                            <span asp-validation-for="Pet.Color" class="text-danger"></span>
                        </div>

                        <!-- Microchip ID -->
                        <div class="mb-3">
                            <label asp-for="Pet.MicrochipId" class="form-label">Microchip ID</label>
                            <input asp-for="Pet.MicrochipId" class="form-control" placeholder="Enter microchip number (if applicable)" />
                            <span asp-validation-for="Pet.MicrochipId" class="text-danger"></span>
                        </div>

                        <!-- Medical Notes -->
                        <div class="mb-3">
                            <label asp-for="Pet.MedicalNotes" class="form-label">Medical Notes</label>
                            <textarea asp-for="Pet.MedicalNotes" class="form-control" rows="3" 
                                placeholder="Any important medical information, allergies, or special notes..."></textarea>
                            <span asp-validation-for="Pet.MedicalNotes" class="text-danger"></span>
                        </div>

                        <!-- Special Needs -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="Pet.IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Pet.IsActive" class="form-check-label">
                                    Active Pet (uncheck if pet is no longer with the family)
                                </label>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Add Pet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .required:after {
        content: " *";
        color: red;
    }
    
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
        // Calculate age when birth date is entered
        document.getElementById('Pet_BirthDate').addEventListener('change', function() {
            const birthDate = new Date(this.value);
            const today = new Date();
            const age = Math.floor((today - birthDate) / (365.25 * 24 * 60 * 60 * 1000));
            
            if (age >= 0 && age < 50) {
                const ageDisplay = document.getElementById('age-display');
                if (ageDisplay) {
                    ageDisplay.textContent = `Age: ${age} year${age !== 1 ? 's' : ''}`;
                } else {
                    const small = document.createElement('small');
                    small.id = 'age-display';
                    small.className = 'form-text text-info';
                    small.textContent = `Age: ${age} year${age !== 1 ? 's' : ''}`;
                    this.parentNode.appendChild(small);
                }
            }
        });
    </script>
} 