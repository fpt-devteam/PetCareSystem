@page
@model VetClinic.Web.Pages.Pets.IndexModel
@{
    ViewData["Title"] = "Pets";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-paw text-primary me-2"></i>Pets</h2>
                <a href="/Pets/Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add New Pet
                </a>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Pets</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="searchTerm" class="form-label">
                                <i class="fas fa-search me-1"></i>Search Pets
                            </label>
                            <input asp-for="SearchTerm" class="form-control" 
                                   placeholder="Search by name, breed, or owner..." />
                        </div>
                        <div class="col-md-3">
                            <label for="speciesFilter" class="form-label">
                                <i class="fas fa-filter me-1"></i>Filter by Species
                            </label>
                            <select asp-for="SpeciesFilter" class="form-select">
                                <option value="">All Species</option>
                                <option value="Dog">Dog</option>
                                <option value="Cat">Cat</option>
                                <option value="Bird">Bird</option>
                                <option value="Fish">Fish</option>
                                <option value="Rabbit">Rabbit</option>
                                <option value="Hamster">Hamster</option>
                                <option value="Guinea Pig">Guinea Pig</option>
                                <option value="Ferret">Ferret</option>
                                <option value="Reptile">Reptile</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="statusFilter" class="form-label">
                                <i class="fas fa-toggle-on me-1"></i>Status
                            </label>
                            <select asp-for="StatusFilter" class="form-select">
                                <option value="">All Status</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                                <a href="/Pets" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Pets Table -->
    <div class="row">
        <div class="col-12">
            @if (Model.Pets.Any())
            {
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-paw me-1"></i>Pet</th>
                                        <th><i class="fas fa-user me-1"></i>Owner</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Details</th>
                                        <th><i class="fas fa-calendar me-1"></i>Age</th>
                                        <th><i class="fas fa-weight me-1"></i>Weight</th>
                                        <th><i class="fas fa-toggle-on me-1"></i>Status</th>
                                        <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pet in Model.Pets)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-3">
                                                        <i class="fas fa-paw fa-lg"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold">@pet.Name</span><br />
                                                        <small class="text-muted">@pet.Species</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@(pet.Owner?.FullName ?? "Unknown")</span><br />
                                                <small class="text-muted">@(pet.Owner?.Email ?? "")</small>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="fw-bold">@(pet.Breed ?? "Mixed")</span><br />
                                                    <small class="text-muted">
                                                        <i class="fas fa-venus-mars me-1"></i>@pet.Gender
                                                        @if (!string.IsNullOrEmpty(pet.Color))
                                                        {
                                                            <span> â€¢ @pet.Color</span>
                                                        }
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var age = Model.CalculateAge(pet.BirthDate);
                                                    var ageString = age > 0 ? $"{age} year{(age == 1 ? "" : "s")}" : "Unknown";
                                                }
                                                <span class="fw-bold">@ageString</span><br />
                                                <small class="text-muted">
                                                    @(pet.BirthDate?.ToString("MMM yyyy") ?? "Unknown")
                                                </small>
                                            </td>
                                            <td>
                                                @if (pet.Weight.HasValue)
                                                {
                                                    <span class="fw-bold">@pet.Weight.Value.ToString("F1") kg</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not recorded</span>
                                                }
                                            </td>
                                            <td>
                                                @if (pet.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times me-1"></i>Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/Pets/Details/@pet.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/Pets/Edit/@pet.Id" class="btn btn-sm btn-outline-warning" title="Edit Pet">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deletePet(@pet.Id, '@pet.Name')" title="Delete Pet">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="d-flex justify-content-center mt-4">
                        <nav aria-label="Pets pagination">
                            <ul class="pagination">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)&searchTerm=@Model.SearchTerm&speciesFilter=@Model.SpeciesFilter&statusFilter=@Model.StatusFilter">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&searchTerm=@Model.SearchTerm&speciesFilter=@Model.SpeciesFilter&statusFilter=@Model.StatusFilter">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)&searchTerm=@Model.SearchTerm&speciesFilter=@Model.SpeciesFilter&statusFilter=@Model.StatusFilter">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-paw fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Pets Found</h5>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SpeciesFilter))
                            {
                                <span>No pets match your search criteria.</span>
                            }
                            else
                            {
                                <span>No pets have been registered yet.</span>
                            }
                        </p>
                        <a href="/Pets/Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add First Pet
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this pet? This action cannot be undone.</p>
                <p><strong>Pet Name:</strong> <span id="petNameToDelete"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" style="display: inline;">
                    <input type="hidden" name="handler" value="Delete" />
                    <input type="hidden" name="petId" id="petIdToDelete" />
                    <button type="submit" class="btn btn-danger">Delete Pet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deletePet(petId, petName) {
            document.getElementById('petIdToDelete').value = petId;
            document.getElementById('petNameToDelete').textContent = petName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Auto-submit search form on Enter key
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[name="SearchTerm"]');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.form.submit();
                    }
                });
            }
        });
    </script>
}

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
</style> 