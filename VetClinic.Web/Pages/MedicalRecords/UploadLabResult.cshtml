@page "{id:int}"
@model VetClinic.Web.Pages.MedicalRecords.UploadLabResultModel
@{
    ViewData["Title"] = "Upload Lab Result";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-upload me-2"></i>Upload Lab Result</h4>
                </div>
                <div class="card-body">
                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h5>Please correct the following errors:</h5>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UploadedFile" class="form-label">Lab Result File *</label>
                                    <input asp-for="UploadedFile" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.gif" required />
                                    <div class="form-text">Accepted formats: PDF, JPG, JPEG, PNG, GIF (Max 10MB)</div>
                                    <span asp-validation-for="UploadedFile" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="LabName" class="form-label">Laboratory Name</label>
                                    <input asp-for="LabName" class="form-control" placeholder="e.g., Central Lab, Vet Diagnostics" />
                                    <span asp-validation-for="LabName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="TestDate" class="form-label">Test Date</label>
                                    <input asp-for="TestDate" class="form-control" type="date" />
                                    <span asp-validation-for="TestDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Brief description of the lab result..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Note:</strong> This lab result will be permanently attached to this medical record and can be accessed by authorized staff.
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/MedicalRecords/Details/@Model.MedicalRecordId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Medical Record
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload me-1"></i>Upload Result
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
