@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Visit Summary";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.MedicalRecord != null)
    {
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-file-medical text-success me-2"></i>Visit Summary</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/Pets/Details/@Model.MedicalRecord.PetId">@Model.MedicalRecord.Pet?.Name</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Visit Summary</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="btn-group" role="group">
                        <a href="/Pets/Details/@Model.MedicalRecord.PetId" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Pet
                        </a>
                        @if (ViewSessionHelper.IsInRole(ViewContext.HttpContext.Session, "Doctor"))
                        {
                            <a href="/MedicalRecords/Edit/@Model.MedicalRecord.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Edit Record
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Visit Information Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-calendar-alt fa-2x text-primary mb-2"></i>
                                    <h5>Visit Date</h5>
                                    <p class="mb-0">@Model.MedicalRecord.VisitDate.ToString("MMMM dd, yyyy")</p>
                                    <small class="text-muted">@Model.MedicalRecord.VisitDate.ToString("hh:mm tt")</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-paw fa-2x text-success mb-2"></i>
                                    <h5>Patient</h5>
                                    <p class="mb-0">@Model.MedicalRecord.Pet?.Name</p>
                                    <small class="text-muted">@Model.MedicalRecord.Pet?.Species - @Model.MedicalRecord.Pet?.Breed</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-user-md fa-2x text-info mb-2"></i>
                                    <h5>Doctor</h5>
                                    <p class="mb-0">Dr. @Model.MedicalRecord.Doctor?.FullName</p>
                                    <small class="text-muted">Veterinarian</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-stethoscope fa-2x text-warning mb-2"></i>
                                    <h5>Service</h5>
                                    <p class="mb-0">@Model.MedicalRecord.Appointment?.Service?.Name</p>
                                    <small class="text-muted">@Model.MedicalRecord.Appointment?.Service?.Description</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Medical Findings -->
            <div class="col-md-8">
                <!-- Diagnosis -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Diagnosis</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.MedicalRecord.Diagnosis))
                        {
                            <p class="mb-0">@Model.MedicalRecord.Diagnosis</p>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No diagnosis recorded for this visit.</p>
                        }
                    </div>
                </div>

                <!-- Treatment Notes -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-notes-medical me-2"></i>Treatment & Findings</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.MedicalRecord.TreatmentNotes))
                        {
                            <div class="white-space-pre-wrap">@Model.MedicalRecord.TreatmentNotes</div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No treatment notes recorded for this visit.</p>
                        }
                    </div>
                </div>

                <!-- Prescription -->
                @if (!string.IsNullOrEmpty(Model.MedicalRecord.Prescription))
                {
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="fas fa-pills me-2"></i>Prescription</h5>
                        </div>
                        <div class="card-body">
                            <div class="white-space-pre-wrap">@Model.MedicalRecord.Prescription</div>
                        </div>
                    </div>
                }

                <!-- Lab Results -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-microscope me-2"></i>Lab Results</h5>
                            @if (ViewSessionHelper.IsInRole(ViewContext.HttpContext.Session, "Doctor"))
                            {
                                <a href="/MedicalRecords/UploadLabResult/@Model.MedicalRecord.Id" class="btn btn-sm btn-outline-light">
                                    <i class="fas fa-plus me-1"></i>Upload Result
                                </a>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.LabResults != null && Model.LabResults.Any())
                        {
                            <div class="row">
                                @foreach (var labResult in Model.LabResults)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card border">
                                            <div class="card-body p-3">
                                                <div class="d-flex align-items-center mb-2">
                                                    <i class="fas fa-file-pdf text-danger me-2"></i>
                                                    <strong class="text-truncate">@labResult.FileName</strong>
                                                </div>
                                                <p class="small text-muted mb-2">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @if (labResult.TestDate.HasValue)
                                                    {
                                                        @labResult.TestDate.Value.ToString("MMM dd, yyyy")
                                                    }
                                                    else
                                                    {
                                                        @:No date
                                                    }
                                                </p>
                                                @if (!string.IsNullOrEmpty(labResult.LabName))
                                                {
                                                    <p class="small text-muted mb-2">
                                                        <i class="fas fa-hospital me-1"></i>
                                                        @labResult.LabName
                                                    </p>
                                                }
                                                @if (!string.IsNullOrEmpty(labResult.Description))
                                                {
                                                    <p class="small mb-2">@labResult.Description</p>
                                                }
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">
                                                        @(labResult.FileSize / 1024) KB
                                                    </small>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/MedicalRecords/DownloadLabResult/@labResult.Id" class="btn btn-outline-primary btn-sm" title="Download">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                        @if (ViewSessionHelper.IsInRole(ViewContext.HttpContext.Session, "Doctor"))
                                                        {
                                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteLabResult(@labResult.Id)" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No lab results attached to this visit.</p>
                        }
                    </div>
                </div>

                <!-- Appointment Notes -->
                @if (!string.IsNullOrEmpty(Model.MedicalRecord.Appointment?.Notes))
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Appointment Notes</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.MedicalRecord.Appointment.Notes</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar Information -->
            <div class="col-md-4">
                <!-- Pet Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-paw me-2"></i>Patient Information</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.MedicalRecord.Pet?.Name</p>
                        <p><strong>Species:</strong> @Model.MedicalRecord.Pet?.Species</p>
                        <p><strong>Breed:</strong> @Model.MedicalRecord.Pet?.Breed</p>
                        <p><strong>Age:</strong> @Model.GetAgeString(Model.MedicalRecord.Pet?.BirthDate)</p>
                        <p><strong>Weight:</strong> @(Model.MedicalRecord.Pet?.Weight?.ToString("F1") ?? "N/A") kg</p>
                        <p><strong>Gender:</strong> @Model.MedicalRecord.Pet?.Gender</p>
                        <p><strong>Color:</strong> @Model.MedicalRecord.Pet?.Color</p>
                    </div>
                </div>

                <!-- Invoice Information -->
                @if (Model.MedicalRecord.Appointment?.Invoice != null)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="fas fa-receipt me-2"></i>Invoice</h6>
                        </div>
                        <div class="card-body">
                            <p><strong>Total Amount:</strong> $@Model.MedicalRecord.Appointment.Invoice.TotalAmount.ToString("N2")</p>
                            <p><strong>Status:</strong>
                                <span class="badge bg-@(Model.MedicalRecord.Appointment.Invoice.Status == "Paid" ? "success" : "warning")">
                                    @Model.MedicalRecord.Appointment.Invoice.Status
                                </span>
                            </p>
                            <p><strong>Created:</strong> @Model.MedicalRecord.Appointment.Invoice.CreatedDate.ToString("MMM dd, yyyy")</p>
                            @if (Model.MedicalRecord.Appointment.Invoice.PaidDate.HasValue)
                            {
                                <p><strong>Paid:</strong> @Model.MedicalRecord.Appointment.Invoice.PaidDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                }

                <!-- Record Metadata -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Record Information</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Record ID:</strong> #@Model.MedicalRecord.Id</p>
                        <p><strong>Created:</strong> @Model.MedicalRecord.CreatedDate.ToString("MMM dd, yyyy")</p>
                        <p><strong>Last Updated:</strong> @Model.MedicalRecord.CreatedDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="/Pets/Details/@Model.MedicalRecord.PetId" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Pet Details
                        </a>
                        <a href="/MedicalRecords?petId=@Model.MedicalRecord.PetId" class="btn btn-outline-info">
                            <i class="fas fa-list me-1"></i>View All Records
                        </a>
                    </div>
                    <div>
                        @if (ViewSessionHelper.IsInRole(ViewContext.HttpContext.Session, "Doctor"))
                        {
                            <a href="/MedicalRecords/Edit/@Model.MedicalRecord.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Edit Record
                            </a>
                        }
                        <button onclick="window.print()" class="btn btn-secondary">
                            <i class="fas fa-print me-1"></i>Print Summary
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h3>Medical Record Not Found</h3>
            <p class="text-muted">The medical record you're looking for could not be found or you don't have permission to view it.</p>
            <a href="/Pets" class="btn btn-primary">
                <i class="fas fa-arrow-left me-1"></i>Back to Pets
            </a>
        </div>
    }

    <!-- Upload Lab Result Modal -->
    <div class="modal fade" id="uploadLabResultModal" tabindex="-1" aria-labelledby="uploadLabResultModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadLabResultModalLabel">
                        <i class="fas fa-upload me-2"></i>Upload Lab Result
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="/MedicalRecords/UploadLabResult/@Model.MedicalRecord.Id" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="UploadedFile" class="form-label">Lab Result File *</label>
                                    <input type="file" class="form-control" id="UploadedFile" name="UploadedFile" accept=".pdf,.jpg,.jpeg,.png,.gif" required>
                                    <div class="form-text">Accepted formats: PDF, JPG, JPEG, PNG, GIF (Max 10MB)</div>
                                </div>
                                <div class="mb-3">
                                    <label for="LabName" class="form-label">Laboratory Name</label>
                                    <input type="text" class="form-control" id="LabName" name="LabName" placeholder="e.g., Central Lab, Vet Diagnostics">
                                </div>
                                <div class="mb-3">
                                    <label for="TestDate" class="form-label">Test Date</label>
                                    <input type="date" class="form-control" id="TestDate" name="TestDate">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Description" class="form-label">Description</label>
                                    <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Brief description of the lab result..."></textarea>
                                </div>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Note:</strong> This lab result will be permanently attached to this medical record and can be accessed by authorized staff.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload me-1"></i>Upload Result
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .white-space-pre-wrap {
            white-space: pre-wrap;
        }

        @@media print {
            .btn, .breadcrumb, .alert {
                display: none !important;
            }

            .card {
                border: 1px solid #ddd !important;
                box-shadow: none !important;
            }

            .card-header {
                background-color: #f8f9fa !important;
                color: #000 !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function deleteLabResult(labResultId) {
            if (confirm('Are you sure you want to delete this lab result? This action cannot be undone.')) {
                $.ajax({
                    url: '/MedicalRecords/DeleteLabResult/' + labResultId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error deleting lab result: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Error deleting lab result. Please try again.');
                    }
                });
            }
        }
    </script>
}
