@page
@model VetClinic.Web.Pages.Appointments.ManageModel
@{
    ViewData["Title"] = "Manage My Appointments";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-calendar-check text-primary"></i> My Appointments</h2>
                <a asp-page="./Book" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Book New Appointment
                </a>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Appointments</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.UpcomingCount</h4>
                    <p class="mb-0">Upcoming</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.CompletedCount</h4>
                    <p class="mb-0">Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@Model.PendingCount</h4>
                    <p class="mb-0">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h4>@Model.CancelledCount</h4>
                    <p class="mb-0">Cancelled</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments List -->
    <div class="row">
        <div class="col-12">
            @if (Model.Appointments.Any())
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="fas fa-list"></i> My Appointments</h6>
                        <span class="badge bg-secondary">@Model.Appointments.Count() total</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Pet</th>
                                        <th>Service</th>
                                        <th>Doctor</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        <tr class="@(appointment.AppointmentTime.Date == DateTime.Today ? "table-info" : "")">
                                            <!-- Date & Time -->
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold">@appointment.AppointmentTime.ToString("MMM dd, yyyy")</span>
                                                    <small class="text-muted">@appointment.AppointmentTime.ToString("hh:mm tt")</small>
                                                    @if (appointment.AppointmentTime.Date == DateTime.Today)
                                                    {
                                                        <span class="badge bg-info">Today</span>
                                                    }
                                                    else if (appointment.AppointmentTime.Date == DateTime.Today.AddDays(1))
                                                    {
                                                        <span class="badge bg-warning">Tomorrow</span>
                                                    }
                                                </div>
                                            </td>

                                            <!-- Pet -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-paw text-primary me-2"></i>
                                                    <div>
                                                        <span class="fw-bold">@appointment.Pet?.Name</span>
                                                        <br />
                                                        <small class="text-muted">@appointment.Pet?.Species - @appointment.Pet?.Breed</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Service -->
                                            <td>
                                                <div>
                                                    <span class="fw-bold">@appointment.Service?.Name</span>
                                                    <br />
                                                    <small class="text-muted">@appointment.Service?.DurationMinutes min - $@appointment.Service?.Price</small>
                                                </div>
                                            </td>

                                            <!-- Doctor -->
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-md text-success me-2"></i>
                                                    <div>
                                                        <span class="fw-bold">Dr. @appointment.Doctor?.FullName</span>
                                                        <br />
                                                        <small class="text-muted">@appointment.Doctor?.Email</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Status -->
                                            <td>
                                                @{
                                                    var statusClass = appointment.Status switch
                                                    {
                                                        "Scheduled" => "bg-primary",
                                                        "Confirmed" => "bg-info",
                                                        "InProgress" => "bg-warning",
                                                        "Completed" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        "Rescheduled" => "bg-secondary",
                                                        "NoShow" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@appointment.Status</span>
                                            </td>

                                            <!-- Actions -->
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <!-- View Details -->
                                                    <a asp-page="./Details" asp-route-id="@appointment.Id" class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    <!-- Actions available only for upcoming appointments -->
                                                    @if (appointment.AppointmentTime > DateTime.Now && 
                                                         (appointment.Status == "Scheduled" || appointment.Status == "Confirmed"))
                                                    {
                                                        <!-- Reschedule (24 hours before) -->
                                                        @if (appointment.AppointmentTime > DateTime.Now.AddHours(24))
                                                        {
                                                            <button type="button" class="btn btn-outline-warning" 
                                                                    onclick="showRescheduleModal(@appointment.Id, '@appointment.Pet?.Name', '@appointment.AppointmentTime.ToString("yyyy-MM-ddTHH:mm")')" 
                                                                    title="Reschedule">
                                                                <i class="fas fa-calendar-alt"></i>
                                                            </button>
                                                        }

                                                        <!-- Cancel (24 hours before) -->
                                                        @if (appointment.AppointmentTime > DateTime.Now.AddHours(24))
                                                        {
                                                            <button type="button" class="btn btn-outline-danger" 
                                                                    onclick="cancelAppointment(@appointment.Id, '@appointment.Pet?.Name')" 
                                                                    title="Cancel">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No appointments found</h5>
                        <p class="text-muted">You haven't booked any appointments yet.</p>
                        <a asp-page="./Book" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Book Your First Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reschedule Modal -->
<div class="modal fade" id="rescheduleModal" tabindex="-1" aria-labelledby="rescheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rescheduleModalLabel">Reschedule Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rescheduleForm" method="post" asp-page-handler="Reschedule">
                <div class="modal-body">
                    <input type="hidden" id="rescheduleAppointmentId" name="appointmentId" />
                    <div class="mb-3">
                        <label for="petName" class="form-label">Pet</label>
                        <input type="text" id="petName" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="newAppointmentTime" class="form-label">New Date & Time</label>
                        <input type="datetime-local" id="newAppointmentTime" name="newAppointmentTime" 
                               class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> 
                            Appointments can only be rescheduled up to 24 hours in advance.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-calendar-alt"></i> Reschedule
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Cancel Form (Hidden) -->
<form id="cancelForm" method="post" asp-page-handler="Cancel" style="display: none;">
    <input name="appointmentId" id="cancelAppointmentId" type="hidden" />
</form>

@section Scripts {
    <script>
        function showRescheduleModal(appointmentId, petName, currentDateTime) {
            document.getElementById('rescheduleAppointmentId').value = appointmentId;
            document.getElementById('petName').value = petName;
            
            // Set minimum date/time to current + 24 hours
            const now = new Date();
            now.setHours(now.getHours() + 24);
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            document.getElementById('newAppointmentTime').min = now.toISOString().slice(0, 16);
            
            // Set default to current appointment time
            const currentDate = new Date(currentDateTime);
            currentDate.setMinutes(currentDate.getMinutes() - currentDate.getTimezoneOffset());
            document.getElementById('newAppointmentTime').value = currentDate.toISOString().slice(0, 16);
            
            var modal = new bootstrap.Modal(document.getElementById('rescheduleModal'));
            modal.show();
        }

        function cancelAppointment(appointmentId, petName) {
            if (confirm(`Are you sure you want to cancel the appointment for ${petName}? This action cannot be undone.`)) {
                document.getElementById('cancelAppointmentId').value = appointmentId;
                document.getElementById('cancelForm').submit();
            }
        }

        // Set minimum date/time for reschedule form when modal is shown
        document.addEventListener('DOMContentLoaded', function() {
            const rescheduleModal = document.getElementById('rescheduleModal');
            rescheduleModal.addEventListener('shown.bs.modal', function () {
                const now = new Date();
                now.setHours(now.getHours() + 24);
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                document.getElementById('newAppointmentTime').min = now.toISOString().slice(0, 16);
            });
        });
    </script>
}
