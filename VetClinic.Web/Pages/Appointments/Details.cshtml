@page
@model VetClinic.Web.Pages.Appointments.DetailsModel
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-calendar-alt text-primary me-2"></i>Appointment Details</h2>
                <div>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>

            <!-- Main Appointment Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Appointment #@Model.Appointment.Id
                            </h5>
                        </div>
                        <div class="col-md-4 text-end">
                            @{
                                var statusClass = Model.Appointment.Status switch
                                {
                                    "Scheduled" => "bg-info",
                                    "Confirmed" => "bg-success",
                                    "InProgress" => "bg-warning text-dark",
                                    "Completed" => "bg-light text-dark",
                                    "Cancelled" => "bg-secondary",
                                    "NoShow" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                
                                var currentUserRole = ViewContext.HttpContext.Session.GetString("UserRole");
                                var currentLoginUserId = ViewContext.HttpContext.Session.GetInt32("UserId");
                                var isDoctorForAppointment = currentUserRole == "Doctor" && currentLoginUserId == Model.Appointment.DoctorId;
                                var isStaffOrHigher = ViewSessionHelper.IsInAnyRole(ViewContext.HttpContext.Session, "Admin", "Manager", "Staff");
                                
                                string nextStatus = "";
                                string nextIcon = "";
                                string nextButtonClass = "";
                                bool canMoveNext = false;
                                
                                if (Model.Appointment.Status == "Scheduled" && isStaffOrHigher)
                                {
                                    nextStatus = "Confirmed";
                                    nextIcon = "fas fa-check";
                                    nextButtonClass = "btn-success";
                                    canMoveNext = true;
                                }
                                else if (Model.Appointment.Status == "Confirmed" && Model.Appointment.AppointmentTime.Date == DateTime.Today && (isStaffOrHigher || isDoctorForAppointment))
                                {
                                    nextStatus = "InProgress";
                                    nextIcon = "fas fa-play";
                                    nextButtonClass = "btn-warning";
                                    canMoveNext = true;
                                }
                                else if (Model.Appointment.Status == "InProgress" && (isStaffOrHigher || isDoctorForAppointment))
                                {
                                    nextStatus = "Completed";
                                    nextIcon = "fas fa-check-circle";
                                    nextButtonClass = "btn-info";
                                    canMoveNext = true;
                                }
                            }
                            
                            <div class="d-flex align-items-center justify-content-end" style="gap: 8px;">
                                <span class="badge @statusClass fs-6">@Model.Appointment.Status</span>
                                
                                <!-- Debug info -->
                                <small style="font-size: 9px; color: #ddd;">
                                    Ngày hẹn: @Model.Appointment.AppointmentTime.Date.ToString("yyyy-MM-dd") |
                                    Ngày hiện tại: @DateTime.Today.ToString("yyyy-MM-dd") |
                                    Là ngày hôm nay: @(Model.Appointment.AppointmentTime.Date == DateTime.Today) |
                                    Role: @currentUserRole | Staff+: @isStaffOrHigher
                                </small>
                                
                                <!-- Hiển thị nút Next cho các trạng thái Confirmed và InProgress -->
                                @if (Model.Appointment.Status == "Confirmed")
                                {
                                    <form method="post" asp-page-handler="UpdateStatus" style="margin:0; padding:0;">
                                        <input type="hidden" name="appointmentId" value="@Model.Appointment.Id" />
                                        <input type="hidden" name="newStatus" value="InProgress" />
                                        <button type="submit" class="btn btn-warning btn-sm" title="Start Appointment">
                                            <i class="fas fa-play"></i>
                                        </button>
                                       </form>
                                }
                                @if (Model.Appointment.Status == "InProgress")
                                {
                                    <form method="post" asp-page-handler="UpdateStatus" style="margin:0; padding:0;">
                                        <input type="hidden" name="appointmentId" value="@Model.Appointment.Id" />
                                        <input type="hidden" name="newStatus" value="Completed" />
                                        <button type="submit" class="btn btn-info btn-sm" title="Complete Appointment">
                                            <i class="fas fa-check-circle"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <!-- Date & Time -->
                            <div class="mb-4">
                                <h6 class="text-primary"><i class="fas fa-calendar me-2"></i>Date & Time</h6>
                                <div class="border rounded p-3 bg-light">
                                    <h5 class="mb-1">@Model.Appointment.AppointmentTime.ToString("dddd, MMMM dd, yyyy")</h5>
                                    <h4 class="text-primary mb-0">@Model.Appointment.AppointmentTime.ToString("hh:mm tt")</h4>
                                    @if (Model.Appointment.AppointmentTime < DateTime.Now && Model.Appointment.Status != "Completed" && Model.Appointment.Status != "Cancelled")
                                    {
                                        <span class="badge bg-danger mt-2">Overdue</span>
                                    }
                                </div>
                            </div>

                            <!-- Pet Information -->
                            <div class="mb-4">
                                <h6 class="text-primary"><i class="fas fa-paw me-2"></i>Pet Information</h6>
                                <div class="border rounded p-3">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Name:</strong><br>
                                            <span class="text-muted">@Model.Appointment.Pet?.Name</span>
                                        </div>
                                        <div class="col-6">
                                            <strong>Species:</strong><br>
                                            <span class="text-muted">@Model.Appointment.Pet?.Species</span>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Appointment.Pet?.Breed))
                                    {
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <strong>Breed:</strong><br>
                                                <span class="text-muted">@Model.Appointment.Pet.Breed</span>
                                            </div>
                                            <div class="col-6">
                                                <strong>Gender:</strong><br>
                                                <span class="text-muted">@Model.Appointment.Pet.Gender</span>
                                            </div>
                                        </div>
                                    }
                                    @if (Model.Appointment.Pet?.BirthDate.HasValue == true)
                                    {
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <strong>Age:</strong><br>
                                                <span class="text-muted">@((DateTime.Now.Year - Model.Appointment.Pet.BirthDate.Value.Year)) years old</span>
                                            </div>
                                            @if (Model.Appointment.Pet?.Weight.HasValue == true)
                                            {
                                                <div class="col-6">
                                                    <strong>Weight:</strong><br>
                                                    <span class="text-muted">@Model.Appointment.Pet.Weight kg</span>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Owner Information (for staff) -->
                            @if (ViewSessionHelper.IsInAnyRole(ViewContext.HttpContext.Session, "Admin", "Manager", "Staff", "Doctor"))
                            {
                                <div class="mb-4">
                                    <h6 class="text-primary"><i class="fas fa-user me-2"></i>Owner Information</h6>
                                    <div class="border rounded p-3">
                                        <div class="row">
                                            <div class="col-6">
                                                <strong>Name:</strong><br>
                                                <span class="text-muted">@Model.Appointment.Pet?.Owner?.FullName</span>
                                            </div>
                                            <div class="col-6">
                                                <strong>Email:</strong><br>
                                                <span class="text-muted">@Model.Appointment.Pet?.Owner?.Email</span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(Model.Appointment.Pet?.Owner?.PhoneNumber))
                                        {
                                            <div class="row mt-2">
                                                <div class="col-12">
                                                    <strong>Phone:</strong><br>
                                                    <span class="text-muted">@Model.Appointment.Pet.Owner.PhoneNumber</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <!-- Service Information -->
                            <div class="mb-4">
                                <h6 class="text-primary"><i class="fas fa-stethoscope me-2"></i>Service Information</h6>
                                <div class="border rounded p-3">
                                    <h5 class="mb-2">@Model.Appointment.Service?.Name</h5>
                                    @if (!string.IsNullOrEmpty(Model.Appointment.Service?.Description))
                                    {
                                        <p class="text-muted mb-2">@Model.Appointment.Service.Description</p>
                                    }
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Price:</strong><br>
                                            <span class="text-success fs-5">$@Model.Appointment.Service?.Price.ToString("F2")</span>
                                        </div>
                                        <div class="col-6">
                                            <strong>Duration:</strong><br>
                                            <span class="text-muted">@Model.Appointment.Service?.DurationMinutes minutes</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Doctor Information -->
                            <div class="mb-4">
                                <h6 class="text-primary"><i class="fas fa-user-md me-2"></i>Doctor Information</h6>
                                <div class="border rounded p-3">
                                    <h5 class="mb-2">Dr. @Model.Appointment.Doctor?.FullName</h5>
                                    <div class="row">
                                        <div class="col-12">
                                            <strong>Email:</strong><br>
                                            <span class="text-muted">@Model.Appointment.Doctor?.Email</span>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Appointment.Doctor?.PhoneNumber))
                                    {
                                        <div class="row mt-2">
                                            <div class="col-12">
                                                <strong>Phone:</strong><br>
                                                <span class="text-muted">@Model.Appointment.Doctor.PhoneNumber</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Notes -->
                            @if (!string.IsNullOrEmpty(Model.Appointment.Notes))
                            {
                                <div class="mb-4">
                                    <h6 class="text-primary"><i class="fas fa-sticky-note me-2"></i>Notes</h6>
                                    <div class="border rounded p-3 bg-light">
                                        <p class="mb-0">@Model.Appointment.Notes</p>
                                    </div>
                                </div>
                            }

                            <!-- Created Date -->
                            <div class="mb-4">
                                <h6 class="text-primary"><i class="fas fa-clock me-2"></i>Booking Information</h6>
                                <div class="border rounded p-3">
                                    <strong>Created:</strong><br>
                                    <span class="text-muted">@Model.Appointment.CreatedDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            @if (ViewSessionHelper.IsInAnyRole(ViewContext.HttpContext.Session, "Admin", "Manager", "Staff", "Doctor"))
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-cogs me-2"></i>Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @{
                                var userRole = ViewContext.HttpContext.Session.GetString("UserRole");
                                var currentUserId = ViewContext.HttpContext.Session.GetInt32("UserId");
                                var isDoctorForThisAppointment = userRole == "Doctor" && currentUserId == Model.Appointment.DoctorId;
                                var isStaffOrAbove = ViewSessionHelper.IsInAnyRole(ViewContext.HttpContext.Session, "Admin", "Manager", "Staff");
                            }
                            
                            @if (Model.Appointment.Status == "Scheduled" && isStaffOrAbove)
                            {
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-success w-100" onclick="updateStatus(@Model.Appointment.Id, 'Confirmed')">
                                        <i class="fas fa-check me-2"></i>Confirm
                                    </button>
                                </div>
                            }
                            @if (Model.Appointment.Status == "Confirmed" && Model.Appointment.AppointmentTime.Date == DateTime.Today && (isStaffOrAbove || isDoctorForThisAppointment))
                            {
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-warning w-100" onclick="updateStatus(@Model.Appointment.Id, 'InProgress')">
                                        <i class="fas fa-play me-2"></i>Start
                                    </button>
                                </div>
                            }
                            @if (Model.Appointment.Status == "InProgress" && (isStaffOrAbove || isDoctorForThisAppointment))
                            {
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-info w-100" onclick="updateStatus(@Model.Appointment.Id, 'Completed')">
                                        <i class="fas fa-check-circle me-2"></i>Complete
                                    </button>
                                </div>
                            }
                            @if (Model.Appointment.Status != "Completed" && Model.Appointment.Status != "Cancelled" && isStaffOrAbove)
                            {
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-danger w-100" onclick="cancelAppointment(@Model.Appointment.Id)">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Status Update Form (Hidden) -->
<form id="statusUpdateForm" method="post" style="display: none;">
    <input name="appointmentId" id="statusAppointmentId" type="hidden" />
    <input name="newStatus" id="statusNewStatus" type="hidden" />
    <input name="handler" value="UpdateStatus" type="hidden" />
</form>

<!-- Cancel Form (Hidden) -->
<form id="cancelForm" method="post" style="display: none;">
    <input name="appointmentId" id="cancelAppointmentId" type="hidden" />
    <input name="handler" value="Cancel" type="hidden" />
</form>

@section Scripts {
    <script>
        function updateStatus(appointmentId, newStatus) {
            if (confirm(`Are you sure you want to mark this appointment as ${newStatus.toLowerCase()}?`)) {
                document.getElementById('statusAppointmentId').value = appointmentId;
                document.getElementById('statusNewStatus').value = newStatus;
                document.getElementById('statusUpdateForm').submit();
            }
        }

        function cancelAppointment(appointmentId) {
            if (confirm('Are you sure you want to cancel this appointment? This action cannot be undone.')) {
                document.getElementById('cancelAppointmentId').value = appointmentId;
                document.getElementById('cancelForm').submit();
            }
        }
    </script>
}
