@page
@model VetClinic.Web.Pages.Services.EditModel
@{
    ViewData["Title"] = "Edit Service";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-edit text-warning me-2"></i>Edit Service</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Services">Services</a></li>
                    <li class="breadcrumb-item active">Edit Service</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-briefcase-medical me-2"></i>Service Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input asp-for="Service.Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Basic Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-info-circle me-1"></i>Basic Information
                                </h6>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Service.Name" class="form-label">Service Name</label>
                                <input asp-for="Service.Name" class="form-control"
                                    placeholder="e.g., General Checkup, Vaccination, Surgery..." />
                                <span asp-validation-for="Service.Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Service.IsActive" class="form-label">Status</label>
                                <div class="form-check form-switch">
                                    <input asp-for="Service.IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="Service.IsActive" class="form-check-label">
                                        Active Service
                                    </label>
                                </div>
                                <span asp-validation-for="Service.IsActive" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label asp-for="Service.Description" class="form-label">Description</label>
                                <textarea asp-for="Service.Description" class="form-control" rows="4"
                                    placeholder="Describe what this service includes, any special requirements, etc..."></textarea>
                                <span asp-validation-for="Service.Description" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Provide a detailed description to help customers understand the service
                                </div>
                            </div>
                        </div>

                        <!-- Pricing and Duration -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-3 mt-4">
                                    <i class="fas fa-calculator me-1"></i>Pricing & Duration
                                </h6>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Service.Price" class="form-label">Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Service.Price" type="number" step="0.01" min="0.01" max="9999.99"
                                        class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Service.Price" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Base price for this service
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Service.DurationMinutes" class="form-label">Duration</label>
                                <div class="input-group">
                                    <input asp-for="Service.DurationMinutes" type="number" min="15" max="480"
                                        class="form-control" placeholder="30" />
                                    <span class="input-group-text">minutes</span>
                                </div>
                                <span asp-validation-for="Service.DurationMinutes" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-clock me-1"></i>
                                    Estimated time for this service (15 min - 8 hours)
                                </div>
                            </div>
                        </div>

                        <!-- Quick Duration Buttons -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label class="form-label">Quick Duration Selection</label><br />
                                <div class="btn-group" role="group" aria-label="Quick duration selection">
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(15)">15 min</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(30)">30 min</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(45)">45 min</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(60)">1 hour</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(90)">1.5 hours</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="setDuration(120)">2 hours</button>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="/Services" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Back to Services
                                    </a>
                                    <div>
                                        <a asp-page="./Details" asp-route-id="@Model.Service.Id"
                                            class="btn btn-outline-info me-2">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                        <button type="button" class="btn btn-outline-warning me-2"
                                            onclick="resetForm()">
                                            <i class="fas fa-undo me-1"></i>Reset
                                        </button>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-save me-1"></i>Update Service
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Service Guidelines Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Service Update Guidelines</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-check-circle me-1"></i>Best Practices</h6>
                            <ul class="list-unstyled small">
                                <li>• Use clear, descriptive service names</li>
                                <li>• Keep descriptions up to date</li>
                                <li>• Adjust duration based on experience</li>
                                <li>• Review pricing regularly</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-exclamation-triangle me-1"></i>Important Notes</h6>
                            <ul class="list-unstyled small">
                                <li>• Changes affect future appointments</li>
                                <li>• Deactivating hides from booking</li>
                                <li>• Price changes don't affect existing bookings</li>
                                <li>• Name changes update everywhere</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function setDuration(minutes) {
            document.getElementById('Service_DurationMinutes').value = minutes;

            // Visual feedback
            const buttons = document.querySelectorAll('.btn-group .btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }

        function resetForm() {
            if (confirm('Are you sure you want to reset all changes? This will restore the original values.')) {
                // Reload the page to restore original values
                window.location.reload();
            }
        }

        // Set active button based on current duration
        document.addEventListener('DOMContentLoaded', function () {
            const durationInput = document.getElementById('Service_DurationMinutes');
            const currentDuration = parseInt(durationInput.value);

            // Highlight the corresponding quick duration button
            const buttons = document.querySelectorAll('.btn-group .btn');
            buttons.forEach(btn => {
                const btnDuration = parseInt(btn.textContent);
                if (btnDuration === currentDuration ||
                    (btn.textContent.includes('hour') && ((btn.textContent.includes('1.5') && currentDuration === 90) ||
                        (btn.textContent.includes('1 hour') && currentDuration === 60) ||
                        (btn.textContent.includes('2 hours') && currentDuration === 120)))) {
                    btn.classList.add('active');
                }
            });

            // Auto-calculate duration display
            durationInput.addEventListener('input', function () {
                const minutes = parseInt(this.value) || 0;
                if (minutes >= 60) {
                    const hours = Math.floor(minutes / 60);
                    const remainingMinutes = minutes % 60;
                    console.log(`Duration: ${hours}h ${remainingMinutes}m`);
                }
            });
        });
    </script>
}